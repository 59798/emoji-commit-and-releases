{
  "name": "emoji-commit-and-releases",
  "version": "0.0.1",
  "private": true,
  "main": "lib",
  "scripts": {
    "start": "mocha --require babel-register --require babel-polyfill --watch",
    "test": "mocha --require babel-register --require babel-polyfill",
    "cover": "nyc --reporter=lcov --reporter=text npm test",
    "lint": "xo",
    "build": "cross-env NODE_ENV=production babel src --out-dir lib",
    "postversion": "git push --follow-tags && conventional-github-releaser -p atom -r 0"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-power-assert": "^1.0.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "conventional-github-releaser": "^1.1.2",
    "cross-env": "^1.0.8",
    "mocha": "^2.5.3",
    "nyc": "^6.4.4",
    "power-assert": "^1.4.1",
    "xo": "^0.15.1"
  },
  "xo": {
    "env": "mocha",
    "space": 2
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "add-module-exports"
    ],
    "env": {
      "development": {
        "presets": [
          "power-assert"
        ]
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/59798/emoji-commit-and-releases.git"
  },
  "bugs": {
    "url": "https://github.com/59798/emoji-commit-and-releases/issues"
  },
  "homepage": "https://github.com/59798/emoji-commit-and-releases#readme"
}
